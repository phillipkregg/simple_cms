<!DOCTYPE html>
<html>
	<head>
	  <title>CMS Admin | <%= @page_title || 'Admin Area' %></title>
	  <%= stylesheet_link_tag :all %>
	  <%= javascript_include_tag :defaults %>
	  <%= csrf_meta_tag %>
	</head>
	
	<body>
		<div id="header">
			<h1>CMS Admin</h1>
		</div>
		
		<div id="main">
			<% if !flash[:notice].blank?  %>
				<div class="notice">
					<%= flash[:notice] %>
				</div>
			<% end %>
			
			<div id="content">
				<%= yield %>
			</div>		
		</div>
		
		<div id="footer">
			<p id="copyright">&copy; Philllip's Cool Junk</p>
		</div>
		
		<div class="inspect-params">	
			<%= debug params %>	
		</div>
	
	</body>
	
</html>